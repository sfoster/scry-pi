{
  "layout": {

    "slots": [
      {"slotid": "slot_1", "widget" : "clock",    "config": "clock"},
      {"slotid": "slot_3", "widget" : "ip", "config": "ipaddress"},
      {"slotid": "slot_6", "widget" : "forecast", "config": "wunderground-forecast"},
      {"slotid": "slot_7", "widget" : "analog_clock", "config": "analog_clock"}
    ]
  },

  "config" : {
    "ipaddress": {
      "widgetTitle": "IP",
      "url": "/ip"
    },
    "clock": {
      "widgetTitle": "Current Time",
      "interval": "1s"
    },
    "analog_clock": {
      "widgetTitle": "Current Time (Analog)"
    },
    "calendar-holidays": {
      "interval": "12h",
      "calendarUrl": "http://www.calendarlabs.com/templates/ical/US-Holidays.ics",
      "maxEntries": 9,
      "widgetTitle": "Upcoming US Holidays"
    },
    "picture-of-the-day": {
      "interval": "12h",
      "widgetTitle": "Nat Geo Picture of the Day",
      "url": "http://photography.nationalgeographic.com/photography/photo-of-the-day"
    },
    "wunderground-forecast": {
      "widgetTitle": "Wunderground Forecast",
      "url": "/wunderground/api/forecast/q/OR/Eugene.json",
      "interval": "1h"
    }
  }
}
